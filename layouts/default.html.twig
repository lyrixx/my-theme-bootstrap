{% extends 'vendor/carew/theme-bootstrap/layouts/default.html.twig'%}

{% block header_before %}
  {% if site.gh_url %}
    <a href="{{ site.gh_url }}" target="_blank"><img style="position: fixed; top: 40px; left: 0; border: 0; z-index:10000" src="https://s3.amazonaws.com/github/ribbons/forkme_left_darkblue_121621.png" alt="Fork me on GitHub"></a>
  {% endif %}
{% endblock %}

{% block nav_right %}
  <ul class="nav pull-right">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" title="Other OSS project">
        Lyrixx
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        {% set sites = {
          'Carew': 'http://carew.github.com',
          'Silex Kitchen Edition': 'http://lyrixx.github.com/Silex-Kitchen-Edition/',
          'Lifestream': 'http://lyrixx.github.com/lifestream',
          'Series': 'http://lyrixx.github.com/Series',
        } %}
        {% for name, url in sites %}
          <li><a href="{{ url }}" target="_blank">{{ name }}</a></li>
        {% endfor %}
        <li class="divider"></li>
        <li class="nav-header">Follow me on</li>
        {% set sites = {
          'Github': 'http://github.com/lyrixx',
          'Twitter': 'http://twitter.com/lyrixx',
          'Blog': 'http://blog.lyrixx.info',
        } %}
        {% for name, url in sites %}
          <li><a href="{{ url }}" target="_blank">{{ name }}</a></li>
        {% endfor %}
      </ul>
    </li>
  </ul>
{% endblock %}
