{% extends 'vendor/carew/theme-bootstrap/layouts/default.html.twig'%}

{% block header_before %}
    {% if site.gh_url %}
        <a href="{{ site.gh_url }}" target="_blank" class="hidden-tablet hidden-phone"><img style="position: fixed; top: 40px; left: 0; border: 0; z-index:10000" src="https://s3.amazonaws.com/github/ribbons/forkme_left_darkblue_121621.png" alt="Fork me on GitHub"></a>
    {% endif %}
{% endblock %}

{% block nav_right %}
    <ul class="nav pull-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" title="Other OSS project">
                Lyrixx
                <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
                {% set sites = {
                    'Carew': 'http://carew.github.com',
                    'Silex Kitchen Edition': 'http://lyrixx.github.com/Silex-Kitchen-Edition/',
                    'Lifestream': 'http://lyrixx.github.com/lifestream/',
                    'Series': 'http://lyrixx.github.com/Series/',
                } %}
                {% for name, url in sites %}
                    <li><a href="{{ url }}" target="_blank">{{ name }}</a></li>
                {% endfor %}
                <li class="divider"></li>
                <li class="nav-header">Follow me on</li>
                {% set sites = {
                    'Github': 'http://github.com/lyrixx',
                    'Twitter': 'http://twitter.com/lyrixx',
                    'Blog': 'http://blog.lyrixx.info',
                } %}
                {% for name, url in sites %}
                    <li><a href="{{ url }}" target="_blank">{{ name }}</a></li>
                {% endfor %}
            </ul>
        </li>
    </ul>
{% endblock %}

{% block stylesheets %}
{% spaceless %}
    {{ parent() }}
    <link rel="stylesheet" href="http://yandex.st/highlightjs/7.3/styles/pojoaque.min.css">
    {#
    <link rel="stylesheet" href="http://yandex.st/highlightjs/7.3/styles/solarized_dark.min.css">
    <link rel="stylesheet" href="http://yandex.st/highlightjs/7.3/styles/rainbow.min.css">
    <link rel="stylesheet" href="http://yandex.st/highlightjs/7.3/styles/zenburn.min.css">
    <link rel="stylesheet" href="http://yandex.st/highlightjs/7.3/styles/tomorrow-night-eighties.min.css">
    #}
{% endspaceless %}
{% endblock %}

{% block javascripts %}
{% spaceless %}
    {{ parent() }}
    <script src="http://yandex.st/highlightjs/7.3/highlight.min.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
    <script type="text/javascript">
        {% if site.google_analytics %}
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', '{{ site.google_analytics }}']);
            {% block google_analytics %}
            _gaq.push(['_trackPageview']);
            {% endblock %}
            (function() {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();
        {% endif %}
    </script>
{% endspaceless %}
{% endblock %}

